run = "pip install -r requirements.txt --break-system-packages -q && python main.py"
entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["gitFull"]

[deployment]
build = ["sh", "-c", "pip install -r requirements.txt --break-system-packages"]
run = ["sh", "-c", "uvicorn main:app --host 0.0.0.0 --port 8000"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 8000
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DANIA WhatsApp Bot"

[[workflows.workflow]]
name = "DANIA WhatsApp Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn main:app --host 0.0.0.0 --port 8000"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "webview"
